<% include ../partials/header %>

<div class="container text-center">
<h2>Your Cocktail Here</h2>

<h3><%= Title %></h3>

<!-- FAVORITES BTN -->
<form class="form" action="/favorites" method="POST">
  <button type="submit" class="btn btn-sm"><i class="glyphicon glyphicon-minus">&nbsp;<strong>Favorites</strong></i></button>
</form>

<form class="form" action="/favorites" method="POST">
  <input type="hidden" name="RecipeID" value="<%= RecipeID %>">
  <input type="hidden" name="Title" value="<%= Title %>">
  <button type="submit" class="btn btn-sm"><i class="glyphicon glyphicon-plus">&nbsp;<strong>Favorites</strong></i></button>
</form>

<!-- SHOPPING BTN -->
<form class="form" action="/favorites" method="POST">
  <button type="submit" class="btn btn-sm"><i class="glyphicon glyphicon-minus">&nbsp;<strong>Shopping List</strong></i></button>
</form>

<form class="form" action="/shopping" method="POST">
  <input type="hidden" name="RecipeID" value="<%= RecipeID %>">
  <input type="hidden" name="Title" value="<%= Title %>">
  <input type="hidden" name="Ingredients" value="<%= Ingredients.map(function(i) { return i.Name }).join(", ") %>">
  <button type="submit" class="btn btn-sm"><i class="glyphicon glyphicon-plus">&nbsp;<strong>Shopping List</strong></i></button>
</form>


<h4>Ingredients</h4>

<table class="table">
  <% Ingredients.forEach(function(ingredient) { %>
  <tr>
    <td><%= ingredient.DisplayQuantity %></td>
    <td><%= ingredient.Unit %></td>
    <td><%= ingredient.Name %></td>
  </tr>
  <% }); %>
</table>

<h4>Makes</h4>

<table class="table">
  <tr>
    <td><%= YieldNumber %></td>
    <td><%= YieldUnit %></td>
  </tr>
</table>

<h4>Directions</h4>
<p><%= Instructions %></p>
<p><%= Subcategory %></p>
</div>

<% include ../partials/footer %>