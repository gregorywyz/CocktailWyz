<% include ../partials/header %>

<div class="favs-backgrnd">
<div class="favs-page container text-center">
  <h2>This is Favorites</h2>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="table-responsive">
        <table class="table">
          <tr>
            <th class="text-center">Drink</th>
            <th class="text-center">Remove?</th>
          </tr>
          <% drinks.forEach(function(drink,idx) { %>
          <tr>
            <td><a href="/search/drink/<%= drink.RecipeID %>"><%= drink.Title %></a></td>
            <td><a href="/favorites/<%= drink.RecipeID %>" class="favs-page-del-btn btn btn-sm"><i class="glyphicon glyphicon-trash"></i></a></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

</div>
</div>

<% include ../partials/footer %>


