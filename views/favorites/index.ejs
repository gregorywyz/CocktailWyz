<% include ../partials/header %>

<div class="container text-center">
  <h2>This is Favorites</h2>

  <ul>
  <% drinks.forEach(function(drink,idx) { %>
    <li><a href="/search/drink/<%= drink.RecipeID %>"><%= drink.Title %></a><a href="/favorites/<%= drink.RecipeID %>" class="favs-page-del-btn btn btn-sm"><i class="glyphicon glyphicon-trash"></i></a></li>
  <% }) %>
  </ul>

  <table id="search-results-table" class="display" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Remove?</th>
      </tr>
    </thead>
    <tbody>
      <% drinks.forEach(function(drink,idx) { %>
      <tr>
        <td><a href="/search/drink/<%= drink.RecipeID %>"><%= drink.Title %></a></td>
        <td><a href="/favorites/<%= drink.RecipeID %>" class="favs-page-del-btn btn btn-sm"><i class="glyphicon glyphicon-trash"></i></a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="table-responsive">
    <table class="table">
      <tr>
        <th class="text-center">Drink</th>
        <th class="text-center">Remove?</th>
      </tr>
      <% drinks.forEach(function(drink,idx) { %>
      <tr>
        <td><a href="/search/drink/<%= drink.RecipeID %>"><%= drink.Title %></a></td>
        <td><a href="/favorites/<%= drink.RecipeID %>" class="favs-page-del-btn btn btn-sm"><i class="glyphicon glyphicon-trash"></i></a></td>
      </tr>
      <% }) %>
    </table>
  </div>

</div>

<% include ../partials/footer %>


